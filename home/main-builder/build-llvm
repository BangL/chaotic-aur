#!/usr/bin/env bash
LOGDIR='/srv/http/chaotic-aur/makepkglogs/_daily'
VCS='git'
cd /tmp

echo '[!] Building'
export TARGET_EXTRAPKGS=''
repoctl down llvm-$VCS
cd llvm-$VCS
~/chaotic-makepkg --sign -sc --nocheck --noconfirm 2>&1 | tee "$LOGDIR/llvm-$VCS"
echo '[!] Nuking'
cd ..
sudo rm -rf /tmp/llvm-$VCS

~/chaotic-add

echo '[!] 32 Building'
export TARGET_EXTRAPKGS='multilib-devel'
repoctl down lib32-llvm-$VCS
cd lib32-llvm-$VCS
~/chaotic-makepkg --sign -sc --nocheck --noconfirm 2>&1 | tee "$LOGDIR/lib32-llvm-$VCS"
echo '[!] 32 Nuking'
cd ..
sudo rm -rf /tmp/lib32-llvm-$VCS

~/chaotic-add
